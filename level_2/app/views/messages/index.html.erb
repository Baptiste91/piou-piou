<h2>Add a new message</h2>
<%= simple_form_for(@message) do |f| %>
  <%= f.input :content %>
  <%= f.association :tag %>
  <%= f.submit %>
<% end %>


<h2>All messages</h2>
<% @messages.each do |message| %>
  <%= link_to message_path(message) do %><p><%= message.content %><% end %> - <%= message.user.username %> - <%= message.tag.name %></p>
<% end %>
